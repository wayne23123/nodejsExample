extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__titile #{product.title}
                        div.card__image
                            img(src="https://cdn.pixabay.com/photo/2015/07/27/20/16/book-863418_1280.jpg", alt="test")
                        div.card__content
                            h2.product__price 20
                            p.product__description a book 
                        .card__actions 
                            button.btn add to cart
        else 
            h1 no products
